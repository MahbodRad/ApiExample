@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="w-max-800 text-end">
    <h4 class="text-primary">Basic authentication</h4>
    <div class="w-max-300">
        <span>UserName</span>
        <input type="text" class="control-input text-center ltr" id="username" value=""/>
    </div>
    <div>
        <span>Password</span>
        <input type="text" class="control-input text-center w-100 ltr" id="password" value="" />
    </div>
    <div class="d-flex justify-content-between p-2">
        <button type="button" class="BTN btn_Pill mt-1 btn_Blue w-fix-100" onclick="SetTextMain('Ehraz','احراز هویت کاربر ثبت شد'); SetValue('username_A', 'username', 'password_A', 'password', 'username_B', 'username', 'password_B', 'password', 'username_C', 'username', 'password_C', 'password', 'username_D', 'username', 'password_D', 'password', 'username_E', 'username', 'password_E', 'password' );">ثبت شود</button>
        <div class="text-center text-danger" id="Ehraz"></div>
    </div>
</div>

<hr />

<div class="card">
    <div class="card-header card-header-best text-start cursor-pointer" onclick="AreaToggel('Api_A');">
        <h4>گروه های کالا</h4>
    </div>
    <div class="card-body dis-none" id="Api_A">
        <form asp-antiforgery="true" method="post" data-ajax-method="post" data-ajax="true"
              data-ajax-begin="SpinnerShow('Res_A');"
              data-ajax-url="?handler=ListGroupKala"
              data-ajax-update="#Res_A">
            <input type="hidden" id="username_A" name="username" value="" />
            <input type="hidden" id="password_A" name="password" value="" />
            <div class="w-max-500 mx-auto">
                <h5 class="text-primary">پارامتر لازم ندارد</h5>
                <button type="submit" class="BTN btn_Normal btn_Blue w-fix-100 float-end">اجرای Api</button>
            </div>
        </form>
        <hr />
        <div id="Res_A"></div>
    </div>
</div>


